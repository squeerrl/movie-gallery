@model MovieGallery.Models.Movie[]

@{
    ViewBag.Title = "Genre List";
}

<h2>@ViewBag.Title</h2>
<h5></h5>

<div class="row">
    @for (int i = 0; i < Model.Length; i++)
    {
                <div class="col-md-3">
                    <h4>@Html.ActionLink(Model[i].DisplayText, "Detail", new { id = Model[i].Id })</h4>

                    <a href="@Url.Action("Detail", new { id = Model[i].Id })">
                        <img src="/Images/@Model[i].CoverImageFileName"
                             alt="@Model[i].DisplayText"
                             class="img-responsive" />
                    </a>
                </div>
    }
</div>

