@model MovieGallery.Models.Movie[]

@{
    ViewBag.Title = "Sehenswert";
    ViewBag.ShowBackBar = true;
}
<h2>@ViewBag.Title</h2>



<div class="row">
    @for (int i = 0; i < Model.Length; i++)
    {
        <div class="col-sm-4 col-md-3">
            <div class="thumbnail">
                <a href="@Url.Action("Detail", new { id = Model[i].Id })">
                    <img src="/Images/@Model[i].CoverImageFileName"
                         alt="@Model[i].DisplayText">
                </a>
                <div class="caption">
                    <h3>@Html.ActionLink(Model[i].DisplayText, "Detail", new { id = Model[i].Id })</h3>
                </div>
            </div>
        </div>
    }
</div>


